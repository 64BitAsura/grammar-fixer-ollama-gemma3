{
  "name": "grammar-fixer-ollama-gemma3",
  "version": "1.0.0",
  "description": "Grammar fixer using Ollama and Gemma3 that returns JSON objects detailing grammar changes",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:server": "node src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "examples": "node examples.js",
    "docs": "npx --yes @redocly/cli preview-docs openapi.yaml",
    "docs:swagger": "npx --yes swagger-ui-watcher openapi.yaml",
    "validate:openapi": "npx --yes @apidevtools/swagger-cli validate openapi.yaml",
    "docker:build": "docker build -t grammar-fixer:latest .",
    "docker:run": "docker run -d --name grammar-fixer -p 3000:3000 -e OLLAMA_HOST=http://host.docker.internal:11434 grammar-fixer:latest",
    "docker:stop": "docker stop grammar-fixer && docker rm grammar-fixer",
    "docker:logs": "docker logs -f grammar-fixer",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "grammar",
    "ollama",
    "gemma3",
    "nlp",
    "text-processing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ollama": "^0.5.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"]
  }
}
