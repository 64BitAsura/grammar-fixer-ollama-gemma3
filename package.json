{
  "name": "grammar-fixer-ollama-gemma3",
  "version": "1.0.0",
  "description": "Grammar fixer using Ollama and Gemma3 that returns JSON objects detailing grammar changes",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "examples": "node examples.js"
  },
  "keywords": [
    "grammar",
    "ollama",
    "gemma3",
    "nlp",
    "text-processing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ollama": "^0.5.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "openapi-schema-validator": "^12.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
